@model GestaoEstudantil.Models.Nota

@{
    ViewBag.Title = "Create";
}

<div class="row">
    <div class="col-9">
        <h2>@ViewBag.pageContex</h2>
    </div>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            <div class="col-sm-12 col-md-6 mb-2">
                <div class="form-group row">
                    @Html.LabelFor(model => model.EstudanteId, "Estudante", htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.DropDownList("EstudanteId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.EstudanteId, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="col-sm-12 col-md-6 mb-2">
                <div class="form-group row">
                    @Html.LabelFor(model => model.FrequenciaId, "Frequencia", htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.DropDownList("FrequenciaId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.FrequenciaId, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="col-sm-12 col-md-6 mb-2">
                <div class="form-group row">
                    @Html.LabelFor(model => model.DisciplinaId, "Disciplina", htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.DropDownList("DisciplinaId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.DisciplinaId, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="col-sm-12 col-md-6 mb-2">
                <div class="form-group row">
                    @Html.LabelFor(model => model.Valor, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.Valor, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Valor, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group mb-4">
            <div class="col-md-offset-2 col-md-12 position-relative">
                <input type="submit" value="Salvar" class="btn btn-primary position-absolute top-0 end-0" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar", "Index", "Estudantes", new { @class = "btn btn-info" })
</div>
