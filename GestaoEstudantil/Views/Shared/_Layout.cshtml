<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Gestão Estudantil</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <link href="~/Content/Site.css" />
    <style>
        home-fondo {
            background-image: url("/Content/img/fundo.jpg")
        }
    </style>
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-lg container-fluid">
            @Html.ActionLink("Gestão Estudantil", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    @if (Request.IsAuthenticated)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle @(ViewBag.page == "Cursos" ? "active" : "")" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Cursos
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    @Html.ActionLink("Listar", "Index", "Cursos", new { area = "" }, new { @class = "dropdown-item" })
                                </li>
                                <li>
                                    @Html.ActionLink("Adicionar", "Create", "Cursos", new { area = "" }, new { @class = "dropdown-item" })
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle @(ViewBag.page == "Estudantes" ? "active" : "")" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Estudantes
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    @Html.ActionLink("Listar", "Index", "Estudantes", new { area = "" }, new { @class = "dropdown-item" })
                                </li>
                                <li>
                                    @Html.ActionLink("Adicionar", "Create", "Estudantes", new { area = "" }, new { @class = "dropdown-item" })
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle @(ViewBag.page == "Professores" ? "active" : "")" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Professores
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    @Html.ActionLink("Listar", "Index", "Professores", new { area = "" }, new { @class = "dropdown-item" })
                                </li>
                                <li>
                                    @Html.ActionLink("Adicionar", "Create", "Professores", new { area = "" }, new { @class = "dropdown-item" })
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle @(ViewBag.page == "Disciplinas" ? "active" : "")" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Disciplinas
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    @Html.ActionLink("Listar", "Index", "Disciplinas", new { area = "" }, new { @class = "dropdown-item" })
                                </li>
                                <li>
                                    @Html.ActionLink("Adicionar", "Create", "Disciplinas", new { area = "" }, new { @class = "dropdown-item" })
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle @(ViewBag.page == "Frequencias" ? "active" : "")" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Frequências
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    @Html.ActionLink("Listar", "Index", "Frequencias", new { area = "" }, new { @class = "dropdown-item" })
                                </li>
                                <li>
                                    @Html.ActionLink("Adicionar", "Create", "Frequencias", new { area = "" }, new { @class = "dropdown-item" })
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle @(ViewBag.page == "Notas" ? "active" : "")" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Notas
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    @Html.ActionLink("Listar", "Index", "Notas", new { area = "" }, new { @class = "dropdown-item" })
                                </li>
                                <li>
                                    @Html.ActionLink("Adicionar", "Create", "Notas", new { area = "" }, new { @class = "dropdown-item" })
                                </li>
                            </ul>
                        </li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>

    <div class="container body-content">
        <div class="row m-4">
            <div class="col-md-12 col-sm-12">
                <div class="card">
                    <div class="card-title">
                        @ViewBag.PageTitle
                    </div>
                    <div class="card-body">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>

        <footer class="card-footer">
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
